<p id="notice"><%= notice %></p>

<h1>Photos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr><% @photo = photo %>
        <td><%= image_tag photo.image.url(:medium) %></td>
        <td>Posted by: <%= photo.user.email %></td>
        <span><%= render partial: 'likes/form', locals: {likeable: @photo} %></span>
        <%= render 'comments/form' %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Photo', new_photo_path %>
